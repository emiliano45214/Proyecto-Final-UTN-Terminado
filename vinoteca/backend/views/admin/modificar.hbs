<div class="padreModificar">
    <div class="container">
        <section id="formHolder">

            <div class="row">

                <!-- Brand Box -->
                <div class="col-sm-6 brand">
                    <a href="#" class="logo">ADV <span>.</span></a>

                    <div class="heading">
                        <h2>Modifica</h2>
                        <p>Tu producto</p>
                    </div>

                    <div class="success-msg">
                        <p>Great! You are one of our members now</p>
                        <a href="#" class="profile">Your Profile</a>
                    </div>
                </div>


                <!-- Form Box -->
                <div class="col-sm-6 form">




                    <!-- Signup Form -->
                    <div class="signup form-peice">
                        <form class="signup-form" action="/admin/administrador/modificar" method="post"
                            enctype="multipart/form-data">



                            <input type="hidden" name="id" id="id" class="name" value="{{producto.id}}">



                            <div class="form-group">
                                <input type="text" name="nombre" class="email" value="{{producto.nombre}}">
                                <span class="error"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" name="marca" value="{{producto.marca}}">
                            </div>

                            <div class="form-group">
                                <input type="text" name="clasificacion" class="pass" value="{{producto.clasificacion}}">
                                <span class="error"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" name="precio" class="passConfirm" value="{{producto.precio}}">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <input type="file" name="imagen" class="passConfirm">
                                <span class="error"></span>
                            </div>
                            <div class="form-group">
                                <div class="eliminarImg">
                                    <label for=""></label>
                                    <input type="checkbox" name="imagen_delete" class="passConfirm" value="1">
                                    <h3>Eliminar imagen.</h3>
                                </div>
                                <span class="error"></span>
                                <input type="hidden" name="imagen_original" class="passConfirm"
                                    value="{{producto.img_id}}">
                            </div>

                            <div class="CTA">
                                <button type="submit" class="botonModificar">Modificar</button>
                                <a href="/admin/administrador">volver</a>
                            </div>
                        </form>
                    </div><!-- End Signup Form -->
                </div>
            </div>

        </section>

    </div>
</div>